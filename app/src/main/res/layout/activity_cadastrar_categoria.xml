<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/branco"
                tools:context="coddi.com.br.view.activity.categoria.CadastrarCategoriaActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNomeCategoria"
        android:layout_marginBottom="20dp"
        android:hint="Nome:"
        android:layout_marginTop="25dp"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comboTipoFinanceiro"
        android:spinnerMode="dropdown"
        android:layout_below="@id/txtNomeCategoria"
        android:layout_marginBottom="25dp"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btnCadastrarCategoria"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/comboTipoFinanceiro"/>

</RelativeLayout>
