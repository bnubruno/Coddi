<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="coddi.com.br.coddi" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="coddi.com.br.App.CoddiApplication"
        android:allowBackup="true"
        android:icon="@drawable/financeiro"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="coddi.com.br.view.activity.login.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.main.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.categoria.CadastrarCategoriaActivity"
            android:label="@string/title_activity_cadastrar_categoria" >
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.conta.CadastrarContaActivity"
            android:label="@string/title_activity_cadastrar_conta" >
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.pagamento.CadastrarPagamentoActivity"
            android:label="@string/title_activity_cadastrar_pagamento" >
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.saque.CadastrarSaqueActivity"
            android:label="@string/title_activity_cadastrar_saque" >
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.transferencia.CadastrarTransferenciaActivity"
            android:label="@string/title_activity_cadastrar_transferencia" >
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.recebimento.CadastrarRecebimentoActivity"
            android:label="@string/title_activity_cadastrar_recebimento" >
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.resultado.ResultadoActivity"
            android:label="@string/title_activity_resultado" >
        </activity>
        <activity
            android:name="coddi.com.br.view.activity.login.RegistrarActivity"
            android:label="@string/title_activity_registrar" >
        </activity>
    </application>

</manifest>
